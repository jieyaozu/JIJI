<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_group_layout"
        style="@style/RippleBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_5">

        <ImageView
            android:id="@+id/item_group_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/compose" />

        <TextView
            android:id="@+id/item_groupname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/item_group_icon"
            android:text="关于VR、AR,微软或成最大赢家"
            android:textColor="@color/nomralblack"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/item_groupremind_number"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/item_messgeicon"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/icon_number_bg"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/colorWhite"
            android:textSize="12dp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/item_group_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="50dp"
        android:background="@color/divider_background_color" />
</LinearLayout>