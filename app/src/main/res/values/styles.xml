<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>

    <style name="BlackTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>

    <style name="NormalBlackTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/nomralblack</item>
        <item name="colorPrimaryDark">@color/blackdark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>

    <style name="SwipeBackTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>-->
    </style>

    <style name="SwipeBlackBackTheme" parent="NormalBlackTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SwipeBackNoTitleTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="NoTitleBar" parent="AppTheme">
        <item name="android:windowTranslucentStatus" tools:targetApi="19">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="NobackDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="RippleBackground">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="mProgress_circle">
        <item name="android:indeterminateDrawable">@drawable/progressbar_circle_1</item>
        <item name="android:minWidth">25dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>

    <style name="mypopwindow_anim_style">
        <item name="android:windowExitAnimation">@anim/popup_dismiss</item>
        <!-- 指定消失的动画xml  -->
    </style>


    <style name="mToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="SwitchCompatStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
</resources>
